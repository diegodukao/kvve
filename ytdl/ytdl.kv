#:kivy 1.9.2

BoxLayout:
    orientation: 'vertical'
    download_url: url_input

    BoxLayout:
        size_hint_y: .1
        TextInput:
            id: url_input
            size_hint_x: .7
        Button:
            text: 'Download'
            size_hint_x: .3
            on_press: app.download(root.download_url.text)

    VideoPlayer:
        size_hint_y: .9
        source: "videos/Ventre - 'Pernas' (Session ao vivo)-3dmeLyrDI2k.mp4"

