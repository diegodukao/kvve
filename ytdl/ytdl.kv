#:kivy 1.9.2
#:import MDLabel kivymd.label.MDLabel
#:import MDList kivymd.list.MDList
#:import MDFlatButton kivymd.button.MDFlatButton
#:import MDTextField kivymd.textfields.MDTextField
#:import OneLineListItem kivymd.list.OneLineListItem

#:import VideosList ytdl.widgets.VideosList

BoxLayout:
    orientation: 'vertical'
    download_url: url_input
    player: video_player

    BoxLayout:
        size_hint_y: .1
        MDTextField:
            id: url_input
            size_hint_x: .7
            hint_text: "Video url"
        MDFlatButton:
            text: 'Download'
            size_hint_x: .3
            font_color: "white"
            on_release: app.download(root.download_url.text)

    BoxLayout:
        size_hint_y: .9

        ScrollView:
            size_hint_x: .3
            do_scroll_x: False
            VideosList:
                id: videos_list

        VideoPlayer:
            id: video_player
            size_hint_x: .7
            source: "videos/Ventre - 'Pernas' (Session ao vivo)-3dmeLyrDI2k.mp4"

